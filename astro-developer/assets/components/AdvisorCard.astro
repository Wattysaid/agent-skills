---
const { title = "AdvisorCard", description = "", items = [], class: className = "" } = Astro.props;
const classes = `rounded-lg border border-gray-200 bg-white p-6 ${className}`.trim();
---
<section class={classes}>
  <h3 class="text-lg font-semibold text-gray-900">{title}</h3>
  {description && <p class="mt-2 text-sm text-gray-600">{description}</p>}
  {items.length > 0 && (
    <ul class="mt-4 space-y-2 text-sm text-gray-600">
      {items.map((item) => (<li>{item}</li>))}
    </ul>
  )}
  <div class="mt-4">
    <slot />
  </div>
</section>
