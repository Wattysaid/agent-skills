---
const { title, subtitle, class: className = "" } = Astro.props;
const classes = `rounded-lg border border-gray-200 bg-white p-6 shadow-sm ${className}`.trim();
---
<div class={classes}>
  {title && <h3 class="text-lg font-semibold">{title}</h3>}
  {subtitle && <p class="mt-1 text-sm text-gray-600">{subtitle}</p>}
  <div class="mt-4">
    <slot />
  </div>
</div>